data1 = LOAD 'data.csv' USING PigStorage(',') 
    AS (id:int, 
        firstname:CHARARRAY, 
        surname:CHARARRAY, 
        birthday:CHARARRAY, 
        color:CHARARRAY, 
        quantity:INT);


Resp1 = FILTER data1 BY LOWER(SUBSTRING($1, 0, 1)) >= 'm';
Resp = FOREACH Resp1 GENERATE $1;
DUMP Resp;


STORE Resp INTO 'output' USING PigStorage(',');
